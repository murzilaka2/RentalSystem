@using RentalSystem.Models
@model PaginationModel

<form method="get" id="clientForm">

    <div class="box-item-sort">

        @*Order sort*@
        <input type="hidden" name="Desc" id="Desc" value="@Model.Desc" />
        <button class="btn btn-sort" type="submit" onclick="toggleSortOrder(event)">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.25 6L5.25 3M5.25 3L2.25 6M5.25 3L5.25 15" stroke="" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M9.75 12L12.75 15M12.75 15L15.75 12M12.75 15L12.75 3" stroke="" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </button>


        @*Page size*@
        <div class="item-sort border-1">
            <span class="text-xs-medium neutral-500 mr-5">Show</span>
            <div class="dropdown dropdown-sort border-1-right">
                <select name="pageSize" class="form-select form-select-sm w-auto ps-12 h-40-px" onchange="this.form.submit()" style="border:none">
                    @foreach (var pageSize in Model.PageSizes)
                    {
                        if (Model.PageSize == pageSize)
                        {
                            <option value="@pageSize" selected>@pageSize</option>
                        }
                        else
                        {
                            <option value="@pageSize">@pageSize</option>
                        }
                    }
                </select>

            </div>
        </div>


        <div class="item-sort border-1">
            <span class="text-xs-medium neutral-500 mr-5">Sort by:</span>
            <div class="dropdown dropdown-sort border-1-right">
                <select name="sortItem" class="form-select form-select-sm w-auto ps-12 h-40-px" onchange="this.form.submit()" style="border:none">
                    @foreach (var sortItem in ViewBag.SortItems)
                    {
                        if (Model.SortItem == sortItem)
                        {
                            <option value="@sortItem" selected>@sortItem</option>
                        }
                        else
                        {
                            <option value="@sortItem">@sortItem</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

</form>



<script>
    function toggleSortOrder(event) {
        event.preventDefault(); 

        const sortOrderField = document.getElementById('Desc');
        sortOrderField.value = !sortOrderField.value;
        document.getElementById('clientForm').submit();
    }
</script>