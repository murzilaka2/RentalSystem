@page "/login"
@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<section class="auth bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex align-items-center flex-column h-100 justify-content-center">
            <img src="assets/images/auth/auth-img.png" alt="site logo">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <a href="/" class="mb-40 max-w-290-px">
                    <img src="assets/images/logo.png" alt="site logo">
                </a>
                <h4 class="mb-12">Sign In to your Account</h4>
                <p class="mb-32 text-secondary-light text-lg">Welcome back! please enter your detail</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.ReturnUrl" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <div class="icon-field mb-16">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="mage:email"></iconify-icon>
                    </span>
                    <input type="text" asp-for="@Model.Email" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Email" />
                </div>

                <div class="position-relative mb-20">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <input type="password" asp-for="@Model.Password" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Password" />
                    </div>                   
                </div>

                <div>
                    <div class="d-flex justify-content-between gap-2">
                        <div class="form-check style-check d-flex align-items-center">
                            <input class="form-check-input border border-neutral-300" type="checkbox" value="true">
                            <label class="form-check-label" for="remeber">Remember me </label>
                        </div>
                        <a href="#" class="text-primary-600 fw-medium">Forgot Password?</a>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

                <div class="mt-32 text-center text-sm">
                    <p class="mb-0">Don’t have an account? <a href="/register" class="text-primary-600 fw-semibold">Sign Up</a></p>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}